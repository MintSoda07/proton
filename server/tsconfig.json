{
  "compilerOptions": {
    "target": "ES2022",
      // Node 런타임이든 번들러든 ESM이면 ES2022 모듈 추천
    "module": "ES2022",
      // Vite/tsup 등 번들러 사용 시
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // 서버 코드면 아래 두 줄 권장
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
